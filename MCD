#include <iostream>
#include <limits> 
#include "math.h"
using namespace std;

int main()
{
    int cantidad,numero,resto,rest=1;
    int mayor = numeric_limits<int>::min(); 
    int menor = numeric_limits<int>::max();
    do{
        cout<<"ingrese la cantidad de numeros que desea ingresar: ";
        cin>>cantidad;
    }while(cantidad<2);
    for (int i=0;i<cantidad;i++){
        cout<<"ingrese el dato: ";
        cin>>numero;
        if (numero>mayor){
            mayor = numero;    
        }
        if (numero<menor){
            menor = numero;
        }
    }
    while(rest!=0){
        resto=mayor%menor;
        mayor=resto;
        rest=menor%mayor;
        cout<<rest;
    }
    cout<<"el MCD es: "<<resto;
    
    return 0;
}
