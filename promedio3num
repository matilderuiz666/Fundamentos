#include <iostream>

using namespace std;

int main(){
    
    float n1,n2,n3,promedio;
    
    cout<<"ingrese el primer numero: ";     
    cin>>n1;
    if(n1<0 || n1>10){
        cout<<"este numero no esta en el rango de 0 a 10";
    }
    else{
        cout<<"ingrese el segundo numero: ";     
        cin>>n2;
        if(n2<0 || n2>10){
            cout<<"este numero no esta en el rango de 0 a 10"<<endl;
        }
        else{
            cout<<"ingrese el tercer numero: ";     
            cin>>n3;
            if(n3<0 || n3>10){
            cout<<"este numero no esta en el rango de 0 a 10"<<endl;;
            }
            else{
                promedio=(n1+n2+n3)/3;
                cout<<"el promedio de los 3 numeros ingresados es: "<<promedio;
            }
        }
    }
    
    return 0;
}
